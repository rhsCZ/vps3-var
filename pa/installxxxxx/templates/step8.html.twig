{% extends 'base.html.twig' %}

{% block step_description %}{% trans %}Installation complete{% endtrans %}{% endblock %}

{% block content %}
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-secondary text-white">
            {% trans %}Step{% endtrans %} {{ current_step }}: {% trans %}Installation complete{% endtrans %}
        </div>
        <div class="card-body">
            <div class="alert alert-success py-1 mb-2 small">
                <strong>{% trans %}Installation Complete!{% endtrans %}</strong> {% trans %}Congratulations! Your Poweradmin installation is now configured.{% endtrans %}
            </div>

            <div class="alert alert-warning py-1 mb-2 small">
                <strong>{% trans %}Important Security Notice:{% endtrans %}</strong> {% trans %}You must remove the "install/" directory from the Poweradmin root directory.{% endtrans %}
                <br>{% trans %}Poweradmin will not function if the install directory exists, as a security measure.{% endtrans %}
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <strong>{% trans %}Next Steps{% endtrans %}</strong>
                </div>
                <div class="card-body py-2">
                    <ol class="small mb-0">
                        <li>{% trans %}Remove the "install/" directory from your server{% endtrans %}</li>
                        <li>{% trans %}Login to <a href="../index.php">Poweradmin</a> using the default username "admin" and the password you set in step 3{% endtrans %}</li>
                        <li>{% trans %}Begin configuring your DNS zones and records{% endtrans %}</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
