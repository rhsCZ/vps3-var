{% extends 'base.html.twig' %}

{% block step_description %}{% trans %}Getting Ready{% endtrans %}{% endblock %}

{% block content %}
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-secondary text-white">
            {% trans %}Step{% endtrans %} {{ current_step }}: {% trans %}Getting Ready{% endtrans %}
        </div>
        <div class="card-body">
            <div class="card mb-3 bg-light">
                <div class="card-header">
                    <strong>{% trans %}Prerequisites{% endtrans %}</strong>
                </div>
                <div class="card-body">
                    <p>{% trans %}Before proceeding, ensure you have:{% endtrans %}</p>
                    <ul>
                        <li>{% trans %}PowerDNS installed with database tables created{% endtrans %}</li>
                        <li>{% trans %}Database credentials (hostname, username, password){% endtrans %}</li>
                        <li>{% trans %}Permission to create tables for Poweradmin{% endtrans %}</li>
                    </ul>
                </div>
            </div>

            <div class="alert alert-info py-2">
                <i class="bi bi-info-circle"></i>
                <strong>{% trans %}Next:{% endtrans %}</strong> {% trans %}Configure database connection, create admin account, and generate configuration file.{% endtrans %}
                <br><small class="text-muted">{% trans %}Note: PostgreSQL and SQLite must use the same database for both PowerDNS and Poweradmin.{% endtrans %}</small>
            </div>

            <!-- Form for continuing -->
            <form method="post">
                <input type="hidden" name="install_token" value="{{ install_token }}">
                <input type="hidden" name="language" value="{{ language }}">
                <input type="hidden" name="step" value="{{ next_step }}">
                <div class="mt-4 text-center">
                    <input type="submit" name="submit" class="btn btn-sm btn-primary" 
                           value="{% trans %}Continue to step{% endtrans %} {{ next_step }}">
                </div>
            </form>
        </div>
    </div>
{% endblock %}